@page "/ClientContacts"
@inherits ClientContactsPageBase

<PageTitle>Client Contacts</PageTitle>

<h1>Client Contacts</h1>

@if ((_MultipleViewModel.ModelArray == null) || (!_MultipleViewModel.ModelArray.Any()))
{
  <p><em>Loading...</em></p>
}
else
{
  <table class="table">
    <thead>
      <tr>        
        <th>Email Address</th>        
        <th>Client Business Number</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var model in _MultipleViewModel.ModelArray)
      {
        <tr>    
          <td>@model.EmailAddress</td>    
          <td>@model.ClientBusinessNumber</td>
        </tr>
      }
    </tbody>
  </table>
}
